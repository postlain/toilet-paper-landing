.page1
	display flex
	background-color: #f0f5f2
	background-position: 50% 50%
	background-repeat: no-repeat
	border-width: 1px
	background-image: url(../images/Upper_background_point.png)
	capture: on
	container: on
	background-size: cover
	height: 800px
	width: 100%
	z-index: 1
	parallax: on
	background-attachment: fixed
	fullcover: on
	left: 0
	top: 0
	align-items: center
	justify-content: center

.container
	&__top
		width 518px
		height 320px
		background-color rgba(182, 202, 185, 0.60)
		top: 50%
		left: 50%


.text
	&__Header
		font-family 'Open Sans'
		font-weight bolder
		font-size 30pt
		color #fefefe
		text-align center
		margin 23px
	&__min
		font-family 'Open Sans'
		font-size 12pt
		color #fefefe
		text-align center
	&__inbutton
		font 'Open Sans'
		font-size 17pt
		color #fefefe
		text-align center
		margin-top 8px

:-moz-placeholder
	color: rgba(255, 249, 248, 0.8)

::-webkit-input-placeholder
	color: rgba(255, 249, 248, 0.8)

.input
	position absolute
	margin 28px 0 0 82px
input[type="text"]
	border: 3px dashed #fefefe
	border-radius: 6px
	-webkit-border-radius: 4px
	-moz-border-radius: 4px
	-khtml-border-radius: 4px
	background: rgba(255, 255, 255, 0) !important
	outline: none
	height: 39px
	width: 349px
	color: #fefefe
	font-size: 16px
	font-family: Calibri

.button1
	position absolute
	background-color #b4c180
	width 278px
	height 39px
	border-radius: 10px
	margin 97px 0 0 115px
	container: on
	box-shadow  0px 3px 1px rgba(0, 0, 0, 0.16)

.button1:active
	background-color: #cbd892
	box-shadow  0px 3px 1px rgba(0, 0, 0, 0.1)

