mixin wrap()
    +b('span').wrap&attributes(attributes)
    #main
        +b.pic__yellow(src='assets/images/top_front_paper.png')
        +b
            +b.pic__blue(src='assets/images/top_background_paper.png')
        +b
            +b.pic__center(src='assets/images/Upper_background_point.png')

    script(type='text/javascript').
      $('body').parallax({
        elements : [
          {
            selector :   'div.pic__yellow',
            properties : {
              x : {
                'background-position-x' : {
                  initial :    0,
                  multiplier : 0.3,
                  invert :     true
                }
              },
              y : {
                'background-position-y' : {
                  initial :    0,
                  multiplier : 0.3,
                  invert :     true
                }
              }
            }
          },
          {
            selector :   'div.blue',
            properties : {
              x : {
                'background-position-x' : {
                  initial :    0,
                  multiplier : 0.3
                }
              },
              y : {
                'background-position-y' : {
                  initial :    0,
                  multiplier : 0.3
                }
              }
            }
          },
          {
            selector :   'div.pic__center',
            properties : {
              x : {
                'background-position-x' : {
                  initial :    0,
                  multiplier : 0.3,
                  invert :     true
                }
              },
              y : {
                'background-position-y' : {
                  initial :    0,
                  multiplier : 0.3,
                  invert :     true
                }
              }
            }
          }
        ]
      });

    block
